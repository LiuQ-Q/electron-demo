{
  "name": "electron-demo",
  "version": "0.0.0",
  "description": "electron-demo",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron .",
    "electron:start": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "npm run build && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiuQ-Q/electron-demo.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LiuQ-Q/electron-demo/issues"
  },
  "homepage": "https://github.com/LiuQ-Q/electron-demo#readme",
  "dependencies": {
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "vite": "^4.0.3",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.LiuQ-Q.electron-demo",
    "productName": "electron-demo",
    "copyright": "Copyright Â© 2022 LiuQ-Q",
    "mac": {
      "category": "public.app-category/utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
